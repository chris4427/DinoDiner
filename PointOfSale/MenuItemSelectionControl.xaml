<UserControl x:Class="DinoDiner.PointOfSale.MenuItemSelectionControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DinoDiner.PointOfSale"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <Style TargetType="Button">
            <Style.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="20" />
                </Style>
            </Style.Resources>
        </Style>
    </UserControl.Resources>

    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <!--Burger-->
        <TextBlock TextAlignment="Center" FontSize="20">
            Burgers
        </TextBlock>
        <Button Name="allosaurusAll_American" Grid.Row="1" Margin="15" FontSize="20" Grid.RowSpan="5" Click="MenuButtons_Click">
            <TextBlock Text="Allosaurus All-American" TextWrapping="WrapWithOverflow" TextAlignment="Center"/>
        </Button>
        <Button Name="carnotaurusCheeseburger" Grid.Row="6" Margin="15" FontSize="20" Grid.RowSpan="5" Click="MenuButtons_Click">
            <TextBlock Text="Carnotaurus Cheeseburger" TextWrapping="WrapWithOverflow" TextAlignment="Center"/>
        </Button>
        <Button Name="deinonychusDouble" Grid.Row="11" Margin="15" FontSize="20" Grid.RowSpan="5" Click="MenuButtons_Click">
            <TextBlock Text="Deinonychus Double" TextWrapping="WrapWithOverflow" TextAlignment="Center"/>
        </Button>
        <Button Name="t_rexTriple" Grid.Row="16" Margin="15" FontSize="20" Grid.RowSpan="5" Click="MenuButtons_Click">
            <TextBlock Text="T-Rex Triple" TextWrapping="WrapWithOverflow" TextAlignment="Center"/>
        </Button>

        <!--Other Entrees-->
        <TextBlock Grid.Column="1" TextAlignment="Center" FontSize="20">
            Entrees
        </TextBlock>
        <Button Name="brontowurst" Grid.Column="1" Grid.Row="1" Grid.RowSpan="4" Margin="15" FontSize="20" Click="MenuButtons_Click">
            Brontowurst
        </Button>
        <Button Name="dinoNuggets" Grid.Column="1" Grid.Row="5" Grid.RowSpan="4" Margin="15" FontSize="20" Click="MenuButtons_Click">
            Dino Nuggets
        </Button>
        <Button Name="prehistoricPBJ" Grid.Column="1" Grid.Row="9" Grid.RowSpan="4" Margin="15" FontSize="20" Click="MenuButtons_Click">
            Prehistoric PBJ
        </Button>
        <Button Name="velociWraptor" Grid.Column="1" Grid.Row="13" Grid.RowSpan="4" Margin="15" FontSize="20" Click="MenuButtons_Click">
            Veloci-Wraptor
        </Button>
        <Button Name="pterodactylWings" Grid.Column="1" Grid.Row="17" Grid.RowSpan="4" Margin="15" FontSize="20" Click="MenuButtons_Click">
            Pterodactyl Wings
        </Button>

        <!--Sides-->
        <TextBlock Grid.Column="2" Grid.Row="0" FontSize="20" TextAlignment="Center">
            Sides
        </TextBlock>
        <Button Name="fryceritops" Grid.Column="2" Grid.Row="1" Grid.RowSpan="5" Margin="15" FontSize="20" Click="MenuButtons_Click">
            Fryceritops
        </Button>
        <Button Name="meteorMacAndCheese" Grid.Column="2" Grid.Row="6" Grid.RowSpan="5" Margin="15" FontSize="20" Click="MenuButtons_Click">
            <TextBlock Text="Meteor Mac &amp; Cheese" TextWrapping="WrapWithOverflow" TextAlignment="Center"/>
        </Button>
        <Button Name="mezzorellaSticks" Grid.Column="2" Grid.Row="11" Grid.RowSpan="5" Margin="15" FontSize="20" Click="MenuButtons_Click">
            Mezzorella Sticks
        </Button>
        <Button Name="triceritots" Grid.Column="2" Grid.Row="16" Grid.RowSpan="5" Margin="15" FontSize="20" Click="MenuButtons_Click">
            Triceritots
        </Button>
        
        <!--Drinks-->
        <TextBlock Grid.Column="3" Grid.Row="0" FontSize="20" TextAlignment="Center">
            Drinks
        </TextBlock>
        <Button Name="plilosoda" Grid.Column="3" Grid.Row="1" Grid.RowSpan="10" Margin="15" FontSize="20" Click="MenuButtons_Click">
            Plilosoda
        </Button>
        <Button Name="cretaceousCoffee" Grid.Column="3" Grid.Row="11" Grid.RowSpan="10" Margin="15" FontSize="20" Click="MenuButtons_Click">
            <TextBlock Text="Cretaceous Coffee" TextWrapping="WrapWithOverflow" TextAlignment="Center"/>
        </Button>
    </Grid>
</UserControl>
